<%= image_tag asset_path("logo.png"), width: "100%", height: "auto" %>
<%= form_with model: @player, url: create_game_path do |f| %>
  <div>
    <%= f.text_field :name, class: "form-control text-center m-2", placeholder: "Player Name", required: true %>
    <div class="invalid-feedback">
      Please choose a username.
    </div>
  </div>
  <div>
    <%= f.submit "Create game" , class: "m-2 btn btn-spy col-12"%>
  </div>
<% end %>